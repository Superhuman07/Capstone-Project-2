<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="admin.com.UnSpammer.Activities.BlockerActivity"
    tools:showIn="@layout/activity_block"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/recycler_view_margin_top"
        android:id="@+id/list_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/desc_edit_list_recycler_view"
        android:layout_marginLeft="@dimen/recycler_view_horizontal_margin"
        android:layout_marginRight="@dimen/recycler_view_horizontal_margin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/empty_list_notice"
        android:layout_marginRight="@dimen/empty_list_margin_horizontal"
        android:layout_marginLeft="@dimen/empty_list_margin_horizontal"
        android:layout_marginStart="@dimen/empty_list_margin_horizontal"
        android:layout_marginEnd="@dimen/empty_list_margin_horizontal"
        android:gravity="center"
        android:text="@string/empty_list_notice"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="gone"/>
</android.support.design.widget.CoordinatorLayout>
